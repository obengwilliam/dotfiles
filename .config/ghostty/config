# Quick terminal positioning (drops down from top)
quick-terminal-position = top

# Quick terminal size (80% height, 100% width)
#quick-terminal-size = 80%,100%

# Animation speed (0.1 seconds)
# quick-terminal-animation-duration = 0.1
